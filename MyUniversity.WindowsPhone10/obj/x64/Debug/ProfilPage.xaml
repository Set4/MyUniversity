<Page
    x:Class="MyUniversity.WindowsPhone10.ProfilPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUniversity.WindowsPhone10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
          

        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Image x:ConnectionId='1' x:Name="image" Source="/Assets/StoreLogo.png" HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Top" Width="100"/>

            <Button x:ConnectionId='2'  HorizontalAlignment="Center" FontSize="10" Margin="0,0,0,0" x:Name="buttonWithFlyout" Content="Edit" >
                <Button.Flyout>
                    <Flyout x:ConnectionId='14' x:Name="rdit">
                        <StackPanel>
                            <TextBlock>Текст Текст Текст Текст и что-нибудь полезное</TextBlock>
                            <TextBox x:ConnectionId='15' x:Name="txbLasName" TextWrapping="NoWrap"                
                     PlaceholderText="txbLasName"/>
                            <TextBox x:ConnectionId='16' x:Name="txbName" TextWrapping="NoWrap"                
                     PlaceholderText="txbName"/>
                            <StackPanel HorizontalAlignment="Right" 
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Button Margin="10"
                                        Content="Cancel"/>
                                <Button x:ConnectionId='17' x:Name="save" Margin="10"
                                        Content="Save"                       />
                            </StackPanel>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
          
      


            
            <TextBlock x:ConnectionId='3' x:Name="email" Text="lasname"                           />
            
            


            <TextBlock x:ConnectionId='4' x:Name="ima" Text="lasname"                           />
            <TextBlock x:ConnectionId='5' x:Name="fam" Text="lasname"                          />


            <TextBlock x:ConnectionId='6' x:Name="gruppa" Text="lasname"                           />
            <TextBlock x:ConnectionId='7' x:Name="imstit" Text="lasname"                          />


            <TextBlock x:ConnectionId='8' x:Name="kaf" Text="lasname"                           />
            <TextBlock x:ConnectionId='9' x:Name="spec" Text="lasname"                          />


            <TextBlock x:ConnectionId='10' x:Name="profil" Text="lasname"                           />
            <TextBlock x:ConnectionId='11' x:Name="forma" Text="lasname"                           />

            <Button x:ConnectionId='12'  HorizontalAlignment="Center" FontSize="10" Margin="0,0,0,0" x:Name="buttonNext" Content="next"                                 />
            <Button x:ConnectionId='13'  HorizontalAlignment="Center" FontSize="10" Margin="0,0,0,0" x:Name="buttonLogOUT" Content="LogOUT" />

        </StackPanel>
      
    </Grid>
</Page>

