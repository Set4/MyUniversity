<Page
    x:Class="MyUniversity.WindowsPhone10.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUniversity.WindowsPhone10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <StackPanel 
            Grid.Row="0"
            Orientation="Horizontal" 
            Background="#1976D2">
            
            <Button x:ConnectionId='8' 
                x:Name="btnMainMenu"
                FontSize="28" Foreground="WhiteSmoke"
                FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                Width="40" Height="40" Background="Transparent"
                                           />

            <TextBlock x:ConnectionId='9'  Margin="15,0,0,0"
                x:Name="txblHeader"
                VerticalAlignment="Center" 
                Text="Header" 
                Foreground="#FFFFFF" 
                FontSize="24"/>

            <!--Надпись Demo-->
            <Border Background="Green" Height="18" Width="80" Margin="180,-48,0,0" >
                <Border.RenderTransform>
                    <CompositeTransform Rotation="47.524"/>
                </Border.RenderTransform>
                <TextBlock HorizontalAlignment="Center" FontSize="10" Text="Demo" Foreground="WhiteSmoke"  />
            </Border>

        </StackPanel>


        <SplitView x:ConnectionId='1' 
            x:Name="splViewMainMenu" 
            Grid.Row="1" 
            DisplayMode="Overlay"  
            IsPaneOpen="False" 
            CompactPaneLength="50" 
            OpenPaneLength="200">

            <!--Скрываемая Панель Меню-->
            <SplitView.Pane>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Профиль-->
                    <Grid Style="{StaticResource iGridStyle}" Grid.ColumnSpan="2" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <Ellipse Grid.Row="0"   
                                 Height="84"  
                                 Width="84" 
                                 Fill="White"/>

                        <Ellipse Grid.Row="0"   
                                 Height="80" 
                                 Width="80">
                            <Ellipse.Fill>
                                <ImageBrush x:ConnectionId='6' x:Name="imgProfile" 
                                            Stretch="UniformToFill"  
                                            ImageSource="/Assets/dorian.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <StackPanel Grid.Row="1">
                            <StackPanel 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"  
                                Orientation="Horizontal"    
                                Margin="5,0,0,0" >

                                <TextBlock x:ConnectionId='5'  x:Name="txblckNameProfile"
                                            Text="Петр Петров" 
                                            Foreground="White" 
                                            FontSize="22" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>

                            </StackPanel>
                            <TextBlock x:ConnectionId='4' x:Name="txblckGroupProfile1"
                                       Text="ТРП-1-12" 
                                       FontWeight="Light" 
                                       Foreground="White" 
                                       FontSize="10" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>



                    <StackPanel  Grid.Row="1" Background="Gray">

                        <!--Линия разграничитель-->
                        <Line  Margin="0,0,0,0"
                               X1="0"                
                               Y1="1"      
                               X2="{Binding ElementName=MySplitView,Path=OpenPaneLength}"
                               Y2="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Stroke="Red"
                               StrokeThickness="2"/>


                        <Button  Background="Transparent" 
                                 HorizontalAlignment="Stretch" 
                                 Height="40" 
                                 HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock  
                                        Text="&#xE825;"  
                                        FontFamily="Segoe MDL2 Assets"  
                                        FontSize="24" 
                                        VerticalAlignment="Center" />
                                    <TextBlock  
                                        Margin="10,0,0,0" 
                                        Text="Button 1" 
                                        FontWeight="SemiBold" 
                                        FontSize="18" 
                                        VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>




                        <StackPanel  Background="DimGray">
                            <Button x:ConnectionId='2' Background="Transparent" 
                                    HorizontalAlignment="Stretch" 
                                    Height="40" 
                                    HorizontalContentAlignment="Center" 
                                                          >
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  
                                            Margin="0,0,0,0" 
                                            Text="Button 1" 
                                            FontWeight="Light" 
                                            FontSize="18" 
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button x:ConnectionId='3' Background="Transparent" 
                                    HorizontalAlignment="Stretch" 
                                    Height="40" 
                                    HorizontalContentAlignment="Center"                      >
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  
                                            Margin="0,0,0,0" 
                                            Text="Button 1" 
                                            FontWeight="Light" 
                                            FontSize="18" 
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>




                        <Button Background="Transparent" 
                                HorizontalAlignment="Stretch" 
                                Height="40" 
                                HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock  Text="&#xE825;" 
                                                FontFamily="Segoe MDL2 Assets"  
                                                FontSize="24" 
                                                VerticalAlignment="Center" />
                                    <TextBlock  Margin="10,0,0,0" 
                                                Text="Button 1" 
                                                FontWeight="SemiBold" 
                                                FontSize="18" 
                                                VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>


                        <StackPanel  Background="DimGray">
                            <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Center" >
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">

                                        <TextBlock  Margin="0,0,0,0" Text="Button 1" FontWeight="Light" FontSize="18" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>


                            <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Center" >
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">

                                        <TextBlock  Margin="0,0,0,0" Text="Button 1" FontWeight="Light" FontSize="18" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock  Text="&#xE825;"  FontFamily="Segoe MDL2 Assets"  FontSize="24" VerticalAlignment="Center" />
                                    <TextBlock  Margin="10,0,0,0" Text="Button 1" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>



                    </StackPanel>


                    <!--Кнопок привязанная к низу-->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Bottom">
                        <Line X1="0"
                              Y1="0"               
                              X2="{Binding ElementName=MySplitView,Path=OpenPaneLength}"
                              Y2="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Stroke="Black"
                              StrokeThickness="2"/>


                        <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock  Text="&#xE825;"  FontFamily="Segoe MDL2 Assets"  FontSize="24" VerticalAlignment="Center" />
                                    <TextBlock  Margin="10,0,0,0" Text="Button 1" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>


                        <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock  Text="&#xE825;"  FontFamily="Segoe MDL2 Assets"  FontSize="24" VerticalAlignment="Center" />
                                    <TextBlock  Margin="10,0,0,0" Text="Button 1" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>

                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <!--Содержание Страницы-->
            <SplitView.Content>
                <Frame x:ConnectionId='7' x:Name="frameMainPageContent"/>
            </SplitView.Content>
        
        </SplitView>
    </Grid>
</Page>

