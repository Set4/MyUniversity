<Page
    x:Class="MyUniversity.WindowsPhone10.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUniversity.WindowsPhone10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <StackPanel 
            Grid.Row="0"
            Orientation="Horizontal" 
            Background="#1976D2">
            
            <Button x:ConnectionId='10' 
                x:Name="btnMainMenu"
                FontSize="28" Foreground="WhiteSmoke"
                FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                Width="40" Height="40" Background="Transparent"
                                           />

            <TextBlock x:ConnectionId='11'  Margin="15,0,0,0"
                x:Name="txblHeader"
                        FontWeight="SemiBold"
                VerticalAlignment="Center" 
                Text="Мой Институт" 
                Foreground="#FFFFFF" 
                FontSize="18"/>

            <!--Надпись Demo-->
            <Border Background="Green" Height="18" Width="80" Margin="180,-48,0,0" Visibility="Collapsed" >
                <Border.RenderTransform>
                    <CompositeTransform Rotation="47.524"/>
                </Border.RenderTransform>
                <TextBlock HorizontalAlignment="Center" FontSize="10" Text="Demo" Foreground="WhiteSmoke"  />
            </Border>

        </StackPanel>


        <SplitView x:ConnectionId='1' 
            x:Name="splViewMainMenu" 
            Grid.Row="1" 
            DisplayMode="Overlay"  
            IsPaneOpen="False" 
            CompactPaneLength="50" 
            OpenPaneLength="200">

            <!--Скрываемая Панель Меню-->
            <SplitView.Pane>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Профиль-->
                    <Grid x:ConnectionId='2' Style="{StaticResource iGridStyle}"  Grid.ColumnSpan="2" Grid.Row="0"                     >
                        <Grid.Background>

                            <ImageBrush ImageSource="Assets/samsung-galaxy-note-3-oboi.jpg" 
                                        Opacity="0.800000011920929" Stretch="None"/>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <Ellipse Grid.Row="0"   
                                 Height="84"  
                                 Width="84" 
                                 Fill="White"/>

                        <Ellipse Grid.Row="0"   
                                 Height="80" 
                                 Width="80">
                            <Ellipse.Fill>
                                <ImageBrush x:ConnectionId='8' x:Name="imgProfile" 
                                            Stretch="UniformToFill"  
                                            ImageSource="ms-appdata:///local/imageprof.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <StackPanel Grid.Row="1">
                            <StackPanel 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"  
                                Orientation="Vertical"    
                                Margin="5,0,0,5" >

                                <TextBlock x:ConnectionId='7'  x:Name="txblckNameProfile"
                                            Text="" 
                                            Foreground="White" 
                                            FontSize="14" 
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                <TextBlock 
                                            Text="(открыть профиль)" 
                                            Foreground="White" 
                                            FontSize="8" 
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Bottom" 
                                            HorizontalAlignment="Center"/>

                            </StackPanel>
                        
                        </StackPanel>
                    </Grid>



                    <StackPanel  Grid.Row="1" Background="#B6B6B6">

                        <!--Линия разграничитель-->
                        <Line  Margin="0,0,0,0"
                               X1="0"                
                               Y1="1"      
                               X2="{Binding ElementName=MySplitView,Path=OpenPaneLength}"
                               Y2="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Stroke="Red"
                               StrokeThickness="2"/>


                        <Button x:ConnectionId='3'  Background="Transparent" 
                                 HorizontalAlignment="Stretch" 
                                 Height="40" 
                                 HorizontalContentAlignment="Left" 
                                                              >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <SymbolIcon  
                                        Symbol="Mail"
                                        Width="40" 
                                        Height="40" 
                                        VerticalAlignment="Center"/>

                                    <!--  <TextBlock  
                                     Text="#;" 
                                      FontFamily="Segoe MDL2 Assets "
                                        FontSize="24" 
                                        VerticalAlignment="Center" /> --> 
                                    <TextBlock  
                                        Margin="5,0,0,0" 
                                        Text="Уведомления" 
                                        FontWeight="SemiBold" 
                                        FontSize="18" 
                                        VerticalAlignment="Center" 
                                        />
                                    <StackPanel x:ConnectionId='6'
                                        x:Name="stpCountUnreadMessage"
                                        VerticalAlignment="Center"
                                 
                                         Margin="5,0,0,0" 
                                        Background="#1976D2"
                                        CornerRadius="5"
                                        >
                                    
                                    </StackPanel>
                                    
                                </StackPanel>
                            </Button.Content>
                        </Button>




                        <!--<StackPanel  Background="DimGray">
                            <Button Background="Transparent" 
                                    HorizontalAlignment="Stretch" 
                                    Height="40" 
                                    HorizontalContentAlignment="Center" 
                                    Tapped="Button_Tapped">
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  
                                            Margin="0,0,0,0" 
                                            Text="Button 1" 
                                            FontWeight="Light" 
                                            FontSize="18" 
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button Background="Transparent" 
                                    HorizontalAlignment="Stretch" 
                                    Height="40" 
                                    HorizontalContentAlignment="Center" Click="Button_Click" >
                                <Button.Content>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  
                                            Margin="0,0,0,0" 
                                            Text="Button 1" 
                                            FontWeight="Light" 
                                            FontSize="18" 
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>-->




                        <Button x:ConnectionId='4' Background="Transparent" 
                                HorizontalAlignment="Stretch" 
                                Height="40" 
                                HorizontalContentAlignment="Left" 
                                                      >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <SymbolIcon  
                                        Symbol="PreviewLink"
                                        Width="40" 
                                        Height="40" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock  Margin="10,0,0,0" 
                                                Text="Успеваемость" 
                                                FontWeight="SemiBold" 
                                                FontSize="18" 
                                                VerticalAlignment="Center"  />
                                </StackPanel>
                            </Button.Content>
                        </Button>



                        <Button x:ConnectionId='5'                          Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <SymbolIcon  
                                        Symbol="CalendarWeek"
                                        Width="40" 
                                        Height="40" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock  Margin="10,0,0,0" Text="Расписание" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Bottom" />
                                </StackPanel>
                            </Button.Content>
                        </Button>



                    </StackPanel>


                    <!--Кнопок привязанная к низу-->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Bottom">
                        <Line X1="0"
                              Y1="0"               
                              X2="{Binding ElementName=MySplitView,Path=OpenPaneLength}"
                              Y2="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Stroke="#1976D2"
                              StrokeThickness="2"/>


                        <Button Background="Transparent" HorizontalAlignment="Stretch" Height="40" HorizontalContentAlignment="Left" >
                            <Button.Content>
                                <StackPanel  Orientation="Horizontal">
                                    <SymbolIcon  
                                        Symbol="Help"
                                        Width="40" 
                                        Height="40" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock  Margin="10,0,0,0" 
                                                Text="Информация" 
                                                FontWeight="SemiBold" 
                                                FontSize="18" 
                                                VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>

                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <!--Содержание Страницы-->
            <SplitView.Content>
                <Frame x:ConnectionId='9' x:Name="frameMainPageContent"/>
            </SplitView.Content>
        
        </SplitView>
    </Grid>
</Page>

