<Page
    x:Class="MyUniversity.WindowsPhone10.MessagesCollectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUniversity.WindowsPhone10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  
    mc:Ignorable="d"
    >

    <Page.Resources>
        <DataTemplate x:Key="UnMessageTemplate">
             <Grid
                Padding="5"
                 Background="#BBDEFB">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="0,0,0,0" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Text="{Binding Date}"  
                               FontSize="12" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding Header}"  
                           FontSize="18" 
                           FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Grid.ColumnSpan="2" 
                           Margin="5,0,5,5" 
                           VerticalAlignment="Top" 
                           Text="{Binding Text}" 
                           TextWrapping="Wrap"  
                           FontSize="16" 
                           FontWeight="Normal"/>

                    <Line 
                        Grid.Column="0" 
                      Grid.ColumnSpan="2" 
                      Grid.Row="2" 
                        HorizontalAlignment="Center"
                        X1='0'
                      X2='400'
                        Y1='0' 
                        Y2='0'
                    Stroke="#1976D2"
                        StrokeThickness='2' />

                </Grid>
        </DataTemplate>


        <DataTemplate x:Key="MessageTemplate">
            <Grid
                Padding="5"
                Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="0,0,0,0" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Text="{Binding Date}"  
                               FontSize="12" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding Header}"  
                           FontSize="18" 
                           FontWeight="SemiBold"/>
                
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Grid.ColumnSpan="2" 
                           Margin="5,0,5,5" 
                           VerticalAlignment="Top" 
                           Text="{Binding Text}" 
                           TextWrapping="Wrap"  
                           FontSize="16" 
                           FontWeight="Normal"/>

                <Line 
                        Grid.Column="0" 
                      Grid.ColumnSpan="2" 
                      Grid.Row="2" 
                        HorizontalAlignment="Center"
                        X1='0'
                      X2='400'
                        Y1='0' 
                        Y2='0'
                    Stroke="#1976D2"
                        StrokeThickness='2' />

            </Grid>



         <!--  <StackPanel Orientation="Vertical" 
                         HorizontalAlignment="Stretch"
                       
                        Padding="10"
                        Background="#B6B6B6">

                <TextBlock 
                    Text="{Binding Date}" 
                    Foreground="Black" 
                    FontSize="10"
                    FontWeight="SemiBold"
                    />

                <TextBlock Text="{Binding Header}" 
                           Foreground="Black" 
                           FontSize="14"
                           TextWrapping="NoWrap"/>
                <TextBlock 
                    Text="{Binding Text}" 
                    Foreground="#727272" 
                    FontSize="10"
                    TextWrapping="Wrap"
                    MaxLines="2"/>
            </StackPanel>
            
            -->
            
        </DataTemplate>
        <local:MessageSelector x:Key="messageSelector"
                               UnMessageTemplate="{StaticResource UnMessageTemplate}"
                               MessageTemplate="{StaticResource MessageTemplate}"/>
    </Page.Resources>
    <Grid Style="{StaticResource SecondaryGridStyle}">
        <ListView x:Name="listViewMessages" 
                  HorizontalAlignment="Stretch" 
                  Margin="0" 
                  VerticalAlignment="Stretch"
                  SelectionChanged="listViewMessages_SelectionChanged"
                 
                  HorizontalContentAlignment="Stretch"
                
                  Padding="5"
                  ItemTemplateSelector="{StaticResource messageSelector}">
            <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
            </ListView.ItemContainerStyle>
        </ListView>








    </Grid>
</Page>
